@inherits UmbracoViewPage<MyWebsite.Data.Models.FeaturesComponent>
@if (Model != null && Model.Features.Any())
{
    <section class="features-icons bg-light text-center">
        <div class="container">
            <div class="row">
                @foreach (var feature in Model.Features)
                {
                    <div class="col-lg-4">
                        <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                            <div class="features-icons-icon d-flex"><i class="bi-window m-auto text-primary"></i></div>
                            @if (!string.IsNullOrEmpty(feature.Title))
                            {
                                <h3>@feature.Title</h3>
                            }
                            @if (!string.IsNullOrWhiteSpace(feature.Text))
                            {
                                <p class="lead mb-0">@feature.Text</p>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
